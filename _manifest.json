{
  "name": "Twelve Meridian Receipt Generator",
  "version": "1.0.0",
  "description": "Generate Receipt for Therapy Session",
  "manifest_version": 3,
  "author": "Utkarsh Singh",
  "action": {
    "default_popup": "index.html",
    "default_title": "Twelve Meridian Receipt Generator"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": [
    "webRequest",
    "activeTab",
    "downloads",
    "tabs",
    "unlimitedStorage",
    "storage",
    "background",
    "notifications"
  ],

  "icons": {
    "16": "favicon-16x16.png",
    "48": "android-icon-48x48.png"
  }
}
